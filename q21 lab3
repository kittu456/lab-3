#include <iostream>
using namespace std;

int main()
{
	float unit, b1, b2, b3, b4;
	cout << "Enter electricity unit charges";
	cin >> unit;
	if(unit<=50)
	{
		b1= 0.50 + (20*0.5)/100;
		cout << "The electricity bill is " << b1;
	}
	else if(unit<=150 && unit>50)
	{
		b2= 0.75 + (20*0.75)/100;
		cout << "The electricity bill is " << b2;
	}
	else if(unit<=250 && unit>150)
	{
		b3= 1.20 + (20*1.20)/100;
		cout << "The electricity bill is " << b3;
	}
	else if(unit>250)
	{
		b4= 1.50 + (20*1.50)/100;
		cout << "The electricity bill is " << b4;
	}	
		return 0;
}
