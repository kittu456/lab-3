#include <iostream>
using namespace std;

int main() {
	int rem, x, i=1, n=0, oct, n1=0, rem1, i1=1, y;
	cout << "Enter the octal number to be converted to binary\n";
	cin >> oct;
	x=oct;
	while(x!=0)
	{
		rem = x%10;
		n= n + (i*rem);
		i=i*8;
		x = x/10;
	}
	y=n
	while(y!=0)
	{
		rem1 = y%2;
		n1= n1 + (i1*rem1);
		i1=i1*10;
		y = y/2;
	}
	cout << "The binary number for " << oct << " is " << n1;
	return 0;
}
