#include <iostream>
using namespace std;

int main() {
	int year, month;
	cout << "Enter the year: \n";
	cin >> year;
	cout << "Enter the month number: \n";
	cin >> month;
	if(month == 2)
	{ if(year%4 == 0)
	 {
	 	cout<< "Number of days in the month = 29";
	 }
	 else
	  {
	 	cout << "Number of days in the month = 28";
	  }
	}
	 else if(month == 1 || month == 3 || month == 5  || month == 7 || month == 8 || month == 10 || month == 12)
	 {
	 	cout << "Number ofdays in the month = 31 ";
	 }
	 else
	 {
	 	cout << "Number of days in the month = 30";
	 }
	return 0;
}
