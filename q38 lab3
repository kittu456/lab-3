#include <iostream>
using namespace std;

int main() {
	int n, rev, a, b;
	rev=0;
	cout << "Enter the number\n";
	cin >> n;
	b= n;
	while(n!=0)
	{
		a=n%10;
		rev=rev*10 +a;
		n = n/10;
	}
	cout << "The reverse of number is "<< rev;
	if(b==rev)
	{
		cout << "The number is a palindrome";
	}
	else
	{
		cout << "The number is not a palindrome";
	}
	
return 0;
}
