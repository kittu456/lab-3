#include <iostream>
using namespace std;

int main() {
	int sum=0, n,i=1;
	cout << "Enter a number\n";
	cin >> n;
	while(i<n)
	{
	if(n%i==0){
	sum = sum + i;
	}
	i = i + 1;
	}
	
	if(sum == n)
	{
		cout << "It is a perfect number.";
	}
	else
	{
		cout << "It is not a perfect number.";
	}
	return 0;
}
